@model MvcVase.Models.VaseMaterialViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Vases" asp-action="Index" method="get">
    <p>
        <select asp-for="VaseMaterial" asp-items="Model.Materials">
            <option value="">All</option>
        </select>
        Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vases[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vases[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vases[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vases[0].Shape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vases[0].Antique)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vases[0].Rating)  <!--Added Manually for rating-->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Vases)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shape)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Antique)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
